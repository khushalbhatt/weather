<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <script>
function startTime() {
  var today = new Date();
  var h = today.getHours();
  var m = today.getMinutes();
  var s = today.getSeconds();
  m = checkTime(m);
  s = checkTime(s);
  document.getElementById('txt').innerHTML =
  h + ":" + m + ":" + s;
  document.getElementById("txt").style.fontSize = "xxx-large";
  var t = setTimeout(startTime, 500);
}
function checkTime(i) {
  if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
  return i;
}
</script>
  </head>
  <body style="background-color:lightgrey" onload="startTime()">
    <div id="txt" style="text-align:center; size:100px"></div>
    <h3 style="text-align:center; padding-top:200px "><strong>The Weather is currently <%=kweatherdata%></strong> <h3>
    <h1 style="text-align:center "> <strong>The temperature in <%=kquery%> is <%=ktemp%> degree celcius</strong>  </h1>
    <img style="  width: 150px;
  height: 150px;
  position: relative;
  left: 600px;"src= <%=kimageurl%> >
  </body>
</html>
